{
  "name": "trap-macros",
  "title": "Trap Macros for Foundry VTT",
  "description": "A module for creating and managing trap macros in Foundry VTT with automated triggers, effects, and damage handling.", 
  "authors": [
    {
      "name": "Jake Orona"
    }
  ],
  "version": "1.0.0",
  "minimumCoreVersion": "10",
  "compatibleCoreVersion": "11",
  "manifestPlusVersion": "1.0.0",
  "url": "https://github.com/JakeOrona/foundry-VTT",
  "manifest": "https://raw.githubusercontent.com/JakeOrona/foundry-VTT/main/dist/module.json",
  "download": "https://github.com/JakeOrona/foundry-VTT/releases/tag/v1.zip",
  "type": "module",
  "includes": [
    "./assets/**",
    "./lang/**",
    "./scripts/**",
    "./styles/**",
    "./templates/**",
    "./module.json",
    "./README.md"
  ],
  "media": [
    {
      "type": "icon",
      "location": "assets/icons/trap.svg"
    }, 
    {
      "type": "cover",
      "location": "assets/images/cover.jpg"
    }
  ],
  "esmodules": [
    "scripts/module.js"
  ],
  "styles": [
    "styles/module.css"
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ]
}